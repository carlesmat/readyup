<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>{% block title %}READYUP{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        {% stylesheets '@bootstrap_css' '@readyup_css' %}
          <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
        {% endstylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
      <div id="wrapper">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
          {% block topMenu %}
            {{ include ('readyup/top.html.twig') }}
          {% endblock %}

          {% block leftMenu %}
            {{ include ('readyup/left.html.twig', { 'select' : 'exercicis'}) }}
          {% endblock %}
        </nav>

          {% block body %}
            <div id="page-wrapper">
              <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Exercicis</h1>
                </div>
              </div>

              <div class="panel-body">
                <div class="row">
                  <div class="col-lg-4">
                    <div class="table-responsive">
                      <table class="table table-bordered table-hover table-striped">
                        <thead>
                          <tr>
                            <th>Id</th>
                            <th>Nom</th>
                          </tr>
                        </thead>
                      <tbody>
                        {% for oExercici in oExercicis %}
                          <tr>
                            <td>{{ oExercici.getIIdExercici }}</td>
                            <td>{{ oExercici.getSNom }}</td>
                          </tr>
                        {% endfor %}
                      </tbody>
                    </table>
                  </div>
                  <!-- /.table-responsive -->
                </div>
                <!-- /.col-lg-4 (nested) -->
                <!-- /.col-lg-8 (nested) -->
              </div>
              <!-- /.row -->
            </div>
            <!-- /.panel-body -->
          </div>

          {% endblock %}

      </div>

      {% block javascripts %}{% endblock %}

      {% javascripts '@jquery' '@bootstrap_js' '@readyup_js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
      {% endjavascripts %}
    </body>
</html>
